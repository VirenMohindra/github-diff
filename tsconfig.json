    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ES6", "DOM"],
    "module": "esnext",
    "outDir": "./dist",
    "target": "ES6",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
